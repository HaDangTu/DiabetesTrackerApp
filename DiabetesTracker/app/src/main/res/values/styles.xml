<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorSecondary</item>
    </style>

    <style name="AppTheme.CheckableButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">@dimen/button_day_text_size</item>
        <item name="strokeWidth">@dimen/button_day_stroke_width</item>
        <item name="strokeColor">@color/colorSecondary</item>
        <item name="cornerRadius">@dimen/button_day_corner_radius</item>
        <item name="android:layout_marginEnd">@dimen/button_day_margin_end</item>
    </style>
</resources>
