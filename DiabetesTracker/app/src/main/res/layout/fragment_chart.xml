<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <Spinner
        android:id="@+id/time_spinner"
        android:layout_width="@dimen/spinner_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dialog_margin_start_end"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="@dimen/dialog_margin_start_end"
        android:spinnerMode="dropdown"
        android:paddingTop="@dimen/spinner_padding_top_bottom"
        android:paddingBottom="@dimen/spinner_padding_top_bottom"
        app:backgroundTint="@color/colorText"/>

    <TextView
        android:id="@+id/warning_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/no_record"
        android:visibility="gone"/>

    <com.anychart.AnyChartView
        android:id="@+id/any_chart_view"
        android:layout_marginTop="@dimen/spinner_padding_top_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="?attr/actionBarSize"/>
</LinearLayout>